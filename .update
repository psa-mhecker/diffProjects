cd /home/users/$user/$project
unset SSH_ASKPASS
git config --global http.sslVerify "false"
git config --global user.name "itkg-developpement"
git config remote.origin.url https://itkg-developpement:itkg-developpement1@github.com/itkg/$project.git
git pull origin $branch
echo "Update Composer"
php /bin/composer.phar update -n
echo "Update ITKG library"
cd /home/users/$user/$project/vendor
if [ -d itkg ]; then
    cd /home/users/$user/$project/vendor/itkg
    git pull origin citroen
    cd ..
else
    git clone https://github.com/itkg/itkg.git
fi

echo "Update ITKG-APIS library"
cd /home/users/$user/$project/vendor
if [ -d itkg-apis ]; then
    cd /home/users/$user/$project/vendor/itkg-apis
    git pull origin master
    cd ..
else
    git clone https://github.com/itkg/apis.git itkg-apis
fi

chown -R $user:projects /home/users/$user/$project
chown -R $user:projects /home/users/$user/$project/.git
chown -R apache:projects /home/users/$user/$project/public/media/image
chown -R apache:projects /home/users/$user/$project/public/media/video
chown -R apache:projects /home/users/$user/$project/public/media/flash
chown -R apache:projects /home/users/$user/$project/public/media/file
chown -R apache:projects /home/users/$user/$project/public/media/design_pack
chmod -R 755 /home/users/$user/$project
chmod -R 777 /home/users/$user/$project/var

